@model MyPlace.Areas.Administrator.Models.AdministerLogBookViewModel

<div>Logbook details</div>
@{
    <div class="container">
        <div class="row mt-2 mb-2 p-2 bg-light">
            <input type="hidden" asp-for="@Model.LogBook.Id" />
            <img class="col-md-3 col-12" src="@Model.LogBook.ImageUrl" />
            <div class="col-md-3 col-12 font-weight-bold">@Model.LogBook.Title</div>
            <div class="col-md-1 col-12 font-weight-bold">@Model.LogBook.Description</div>
            <div class="col-md-4 col-12">@Model.LogBook.Address</div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-2 mb-2 p-2 bg-light">
            <div class="col-md-6">
                <div class="form-group">
                    <i class="fa fa-tag"></i> <h5>Assigned Tags:</h5>
                    @foreach (var category in Model.LogBookCategories)
                    {
                        <input type="hidden" asp-for="@category.CategoryId" />
                        <div class="col-md-3 col-3 font-weight-bold">@category.Name</div>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <form asp-action="AddCategoryToLogBook" method="post">                   
                    <input type="hidden" asp-for="@Model.LogBook.Id" />                    
                    <div class="form-group">
                        <h5>All Tags:</h5>
                        @for (int i = 0; i < Model.AllUnassignedCategories.Count; i++)
                        {
                            string id = "radiobtn" + Model.AllUnassignedCategories[i].Name;

                            <div class="custom-control">
                                <input type="checkbox" asp-for="@Model.AllUnassignedCategories[i].isSelected">
                                <label asp-for="@Model.AllUnassignedCategories[i].isSelected">@Model.AllUnassignedCategories[i].Name</label>
                                <input type="hidden" asp-for="@Model.AllUnassignedCategories[i].Name" />
                                <input type="hidden" asp-for="@Model.AllUnassignedCategories[i].CategoryId" />
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Tag" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-2 mb-2 p-2 bg-light">
            <div class="col-md-6">
                <div class="form-group">
                    <i class="fa fa-tag"></i> <h5>Logbook Managers:</h5>
                    @foreach (var user in Model.LogBookUsers)
                    {
                        <input type="hidden" asp-for="@user.Id" />
                        <div class="col-md-3 col-3 font-weight-bold">@user.Name</div>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <form asp-action="AddManagerToLogBook" method="post">
                    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.LogBook.Id" />
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <h5>All Managers:</h5>
                                @for (int i = 0; i < Model.AllUnassignedUsers.Count; i++)
                                {
                                    string id = "radiobtn" + Model.AllUnassignedUsers[i].Name;

                                    <div class="custom-control">
                                        <input type="checkbox" asp-for="@Model.AllUnassignedUsers[i].isSelected">
                                        <label asp-for="@Model.AllUnassignedUsers[i].isSelected">@Model.AllUnassignedUsers[i].Name</label>
                                        <input type="hidden" asp-for="@Model.AllUnassignedUsers[i].Name" />
                                        <input type="hidden" asp-for="@Model.AllUnassignedUsers[i].Id" />
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="submit" value="Add Manager" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
     </div>
}


