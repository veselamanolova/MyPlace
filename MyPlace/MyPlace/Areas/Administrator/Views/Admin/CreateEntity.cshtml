
@{
    Layout = null;
}

@model MyPlace.Areas.Administrator.Models.CreateEntityBindingModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/lib/login-form/css/main.css" rel="stylesheet" />
    <link href="~/lib/login-form/css/util.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/login-form/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login101">

                <form asp-controller="Account" asp-action="CreateEntity" method="post" class="login100-form validate-form">
                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input asp-for="Title" class="input101" placeholder="new Entity Title" id="txtUsername">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input asp-for="Address" class="input101" placeholder="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input asp-for="Description" class="input101" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input asp-for="ImageUrl" class="input101" placeholder="Image">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <input type="submit" class="login100-form-btn" value="Create">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/login-form/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/lib/login-form/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/lib/login-form/js/main.js"></script>

</body>
</html>

