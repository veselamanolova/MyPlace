@model MyPlace.Areas.Administrator.Models.TagViewModel

@{
    ViewData["Title"] = "EditTag";
}

<h1>EditTag</h1>

<hr />

<form asp-action="EditTag" method="post">
    <div class="row">
        <div class="col-md-4">
            <input asp-for="@Model.Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.CategoryId" />
        </div>
        <div class="form-group col-md-8">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


