@model MyPlace.Areas.Administrator.Models.TagViewModel

<div class="container">
    <div class="row mt-2 mb-2 p-2 bg-light">
        <input type="hidden" asp-for="@Model.CategoryId" />
        <div class="col-md-3 col-12 font-weight-bold">@Model.Name</div>      
        <a class="col-md-1 col-12" href='@Url.Action("EditTag", "Tags", new { id = @Model.CategoryId })'><i class="fa fa-pencil-square-o icon"></i></a>
        <!-- Modal -->
        <a href="#" data-toggle="modal" data-target="#confirmDeleteModal" title="Delete"><i class="fa fa-trash icon"></i></a>
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Delete tag?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <form asp-action="DeleteTag" method="post">
                            <input type="hidden" asp-for="@Model.CategoryId" />
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
