@model MyPlace.Areas.Notes.Models.SearchNotesViewModel

<div>
    <form asp-action="SearchNote" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.EntityId" class="form-control" />
                @*<span asp-validation-for="@Model.Text" class="text-danger"></span>*@
            </div>
            <div class="col-md-9">
                <div class="form-group">
                    <input asp-for="@Model.SearchedStringInText" class="form-control" placeholder="Search in text" />
                    @*<span asp-validation-for="@Model.Text" class="text-danger"></span>*@
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <select asp-for="@Model.SearchCategoryId"
                            asp-items="@(new SelectList(Model.EntityCategories,"CategoryId","Name"))"
                            class="form-control">
                        <option value="0">All Categories</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="date" asp-for="@Model.ExactDate" class="datepicker form-control" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="date" asp-for="@Model.FromDate" class="datepicker form-control" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="date" asp-for="@Model.ToDate" class="datepicker form-control" />
                    @*<span asp-validation-for="@Model.ToDate" class="text-danger"></span>*@
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input asp-for="@Model.Creator " class="form-control" placeholder="Search by Creator" />
                    @*<span asp-validation-for="@Model.Text" class="text-danger"></span>*@
                </div>
            </div>
            <div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        $(document).off('.datepicker.data-api');
        $('.datepicker').datepicker({
        startDate: '-3d'
        });*@

    $(function() {
        $('#datepicker').val('<%= DateTime.Now.ToString("yyyy-MM-dd") %>');
        $('#datepicker').datepicker({
        dateFormat: 'yyyy-MM-dd'
        });
      });
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
