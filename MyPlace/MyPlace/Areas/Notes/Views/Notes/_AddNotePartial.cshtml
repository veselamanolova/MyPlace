@model MyPlace.Areas.Notes.Models.AddNoteViewModel

@*<div class="row">*@
    <div>
        <form asp-action="AddNote">
            <div class="row" col-md-16>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Note.Id" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Note.EntityId" />
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Note.Text" class="control-label">New note</label>
                        <input asp-for="Note.Text" class="form-control" />
                        <span asp-validation-for="Note.Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Note.Category.Name" class="control-label">Category</label>
                        <input asp-for="Note.Category.Id" class="form-control" />
                        <input type="hidden" asp-for="Note.Category.Name" />
                    </div>
                </div>
                <div>
                  @* To do - Entities Categories will show here  *@
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
@*</div>*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
