
@model MyPlace.Models.Catalog.CatalogIndexModel
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<br>
    <div id="open">
        <div class="content">
            <h1>Rate the Hotel/Restaurant service</h1>
            <span><i class="fa fa-star"></i></span>
        </div>

        <form asp-action="Index" method="get">
            <div class="search__container">
                <input class="search__input" type="text" placeholder="Search" name="SearchString" value="@ViewData["Filter"]" id="auto" />
            </div>
        </form>



        @foreach (var item in Model.EntitiesList)
         {
         <div class="section-border">
             <div class="row">
                 <div class="col-md-4">
                     <figure class="snip1573">
                         <center><img src="@item.ImageUrl" alt="" height="200" width="315" /></center>
                         <figcaption>
                             <h3>@item.Title</h3>
                         </figcaption>
                         <a href="#"></a>
                     </figure>
                 </div>
                 <div class="col-md-7 left-align-p">
                     <br>
                     <h6>@item.Description</h6>
                     <h5>Rating: </h5>

                     <br>
                     <a asp-controller="Catalog" asp-action="Establishment" asp-route-id="@item.Id" class="snip1505 hover">
                         leave a comment
                     </a>
                 </div>
             </div>
         </div>
         }
    </div>


