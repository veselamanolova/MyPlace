
@model MyPlace.Models.Catalog.EstablishmentIndexModel

<h2>@Model.Title</h2>

<div class="container">

    <div class="form-group">
        <form>
            <textarea asp-for="NewPost" class="form-control" placeholder="Add comment!"></textarea>
            <input type="button" id="sendButton" value="Send Message" class="btn btn-primary" style="margin-top:10px"/>
        </form>
    </div>


    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            User<input type="text" id="userInput" />
            <br />
            Message<input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" rows="5" cols="10"/>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

<section id="app" class="comments">

    @foreach (var comment in Model.Comments)
    {
        <article>
            <h4><a href="#">chrisburton</a></h4>
            <time>Created On: @comment.CreatedOn</time>
            <like></like>
            <h6>
                @comment.Content
            </h6>
        </article>
    }

</section>

@section Scripts  {
    <script src="~/lib/@@aspnet/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/comment.js"></script>
}





