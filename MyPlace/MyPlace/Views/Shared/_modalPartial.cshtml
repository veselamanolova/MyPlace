

@model MyPlace.Areas.Administrator.Models.CreateEntityBindingModel

<div class="modal fade" id="CreateEntityModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">
                    <strong>Create new Entity</strong>
                </h6>
                <button type="button" class="close"
                        data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-area="Administrator" asp-controller="Admin" asp-action="CreateEntity" method="post">
                    <div class="form-group">
                        <label for="movieTitle">Entity Title</label>
                        <input asp-for="Title" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="movieDirector">Book Publisher</label>
                        <input asp-for="Address" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="movieDirector">Book Category (Split by ' ')</label>
                        <input asp-for="Description" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="movieDirector">Book Author (Split by ' ')</label>
                        <input asp-for="ImageUrl" type="text" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-default">Create Entity</button>
                </form>
            </div>
        </div>
    </div>
</div>


